pipeline {
    agent any


    stages {
        stage('Stop') {
            steps {
              catchError(buildResult:'SUCCESS', stageResult:'SUCCESS'){
                echo 'Stopping container'
                sh "docker stop config-service"
                }
        }}

        stage('Remove') {
            steps {
                catchError(buildResult:'SUCCESS', stageResult:'SUCCESS'){
                    echo 'Removing container and deleting all local images'
                    sh "docker rm config-service"
                    sh "docker image prune -af"
                    sh "docker builder prune -af"
                }

            }
        }
        stage('Package Application') {
            steps {
                echo 'Packaging the app into jars with gradle'
                sh "cd config-server && ./gradlew assemble"
            }
        }

        stage('Build') {
            steps {
                echo 'Building image'
                sh "docker build --force-rm -t 'config-service' ./config-service"
            }
        }

        stage('Run') {
            steps {
                echo 'Running container'
                sh "docker run -d -p 8888:8888 --name config-service config-service"
            }
        }

 }}


